iflags=-I/opt/local/include/ -I./ -I./src/ -I./src/Maths/ -I./src/Graphics/ -I./src/Cameras/ -I./src/Geometry/
lflags=-L/opt/local/lib/ -ljpeg -lpng
flags=-g -Wall -Wextra -pedantic -ansi 

src_dir=src/
test_dir=test/
obj_dir=objs/

compiler=g++

rule compile
  command = $compiler $iflags $flags -c $in -o $out

rule link
  command = $compiler $iflags $lflags $flags $in -o $out

include deps.ninja
