iflags=-I/opt/local/include/ -I./ -I./src/ -I./src/Maths/ -I./src/Graphics/ -I./src/Cameras/ -I./src/Geometry/ -I./src/Lights/ -I./src/MeshImporters/
lflags=-L/opt/local/lib/ -ljpeg -lpng -l3ds
flags=-Wall -Wextra -pedantic -ansi -O2

src_dir=src/
test_dir=test/
obj_dir=objs/

compiler=clang++

rule compile
  command = $compiler $iflags $flags -c $in -o $out

rule link
  command = $compiler $iflags $lflags $flags $in -o $out

include deps.ninja
