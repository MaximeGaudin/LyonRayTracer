iflags=-I/opt/local/include/ -I./ -I./src/ -I./src/Maths/ -I./src/Graphics/
lflags=-L/opt/local/lib/ -lm -lpthread -L/usr/X11R6/lib -lm -lpthread -lX11
flags=-g -Wall -Wextra -pedantic -ansi -Wno-unused-but-set-parameter -Wno-variadic-macros

src_dir=src/
test_dir=test/
obj_dir=objs/

compiler=g++

rule compile
  command = $compiler $iflags $flags -c $in -o $out

rule link
  command = $compiler $iflags $lflags $flags $in -o $out

include deps.ninja
