build lrt: link $obj_dir/Exceptions.o $obj_dir/Ray.o $obj_dir/Image.o $obj_dir/JPGWriter.o $obj_dir/PNGWriter.o $obj_dir/Perspective.o $obj_dir/Material.o  $obj_dir/Sphere.o $obj_dir/Directional.o $src_dir/main.cc 
