<scene width="600" height="600">

  <camera type="perspective">
    <eye><vector3 X="0" Y="0.5" Z="0.5" /></eye>
    <lookat><vector3 X="-0.2" Y="0" Z="0" /></lookat>
    <up><vector3 X="0" Y="1" Z="0" /></up>
    <focalDistance>0.5</focalDistance>
  </camera>

  <materials>
    <material name="blue">
      <diffuse><color R="0" G="0" B="1" /></diffuse>
      <reflexivity>0.9</reflexivity>
    </material>

    <material name="grey">
      <diffuse><color R="0.6" G="0.6" B="0.6" /></diffuse>
      <reflexivity>1</reflexivity>
    </material>
 
  </materials>

  <lights>
    <light type="point">
      <position><vector3 X="-2000" Y="2000" Z="2000" /></position>
    </light>
  </lights>

  <geometries>
   <geometry type="mesh" material="grey">
     <filename>models/teapot2.3ds</filename>
     <position><vector3 X="0" Y="0" Z="0" /></position>
   </geometry>

   <geometry type="plane" material="blue">
     <point><vector3 X="0" Y="-0.4" Z="0" /></point>
     <normal><vector3 X="0" Y="1" Z="0" /></normal>
   </geometry>
  </geometries>


</scene>
